<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Recipients"
        android:textSize="45dp"
        android:id="@+id/recipientsTitle"
        />

    <EditText
        android:layout_below="@+id/recipientsTitle"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:text=""
        android:id="@+id/emails"
        android:textSize="20dp"
        android:hint="abc@xyz.com, xyz@abc.com"
        />

    <TextView
        android:layout_below="@+id/emails"
        android:id="@+id/timeConfirm"
        android:text=""
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10sp"
        android:gravity="center_horizontal"
        android:textSize="40dp"
        android:layout_marginTop="30sp"
        />

    <Button
        android:layout_below="@+id/timeConfirm"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"
        android:text="Confirm"
        android:textSize="25dp"
        android:id="@+id/confirmButton"
        />

    <Button
        android:layout_below="@+id/confirmButton"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:text="Return"
        android:textSize="25dp"
        android:id="@+id/returnButton"
        />

</RelativeLayout>